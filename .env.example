# ========================================
# Rate Limiting Configuration
# ========================================
# Maximum requests per time window
RATE_LIMIT_MAX_REQUESTS=5
# Time window in milliseconds (86400000 = 24 hours)
RATE_LIMIT_WINDOW_MS=86400000

# OPTIONAL: Upstash Redis for distributed rate limiting
# Get from https://console.upstash.com/
# If not set, will use in-memory rate limiting (not recommended for production)
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# ========================================
# Analytics Configuration (Optional)
# ========================================
# Leave empty to disable analytics forwarding
ANALYTICS_URL=https://bomboclatt.ashwin.lol/api/collect
ANALYTICS_SITE_ID=cdd6e3c0-1aa1-4a10-83b7-56157157bab8

# ========================================
# Security Configuration
# ========================================
# Generate a random string for CSRF protection: openssl rand -base64 32
CSRF_SECRET=your_csrf_secret_here

# Generate a random string for revalidation: openssl rand -base64 32
# Used for on-demand ISR revalidation endpoint
REVALIDATION_SECRET=your_revalidation_secret_here

# Enable/disable security features (true/false)
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true

# ========================================
# Environment
# ========================================
# Set to 'production' in production environments
NODE_ENV=development
